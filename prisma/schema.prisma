generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Property {
  id          String   @id @default(uuid())
  title       String
  price       Float
  location    String
  bedrooms    Int
  bathrooms   Int
  area        Float
  type        String
  featured    Boolean  @default(false)
  description String?
  images      String[] // Array of image URLs
  videoUrl    String?  // Optional video URL
  thumbnail   String?  // Optional video thumbnail URL
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
}

model Agent {
  id          String   @id @default(uuid())
  name        String
  title       String
  email       String   @unique
  phone       String
  location    String
  description String
  image       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
