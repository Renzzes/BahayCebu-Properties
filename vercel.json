{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/auth/google/callback",
      "dest": "/api/auth/google/route.ts"
    },
    {
      "src": "/api/auth/(.*)",
      "dest": "/api/auth/$1.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.ts"
    },
    {
      "src": "^/carousel/(.*)",
      "dest": "/carousel/$1"
    },
    {
      "src": "^/LOGO/(.*)",
      "dest": "/LOGO/$1"
    },
    {
      "src": "^/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "^/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": ".*",
      "dest": "/index.html"
    }
  ]
} 